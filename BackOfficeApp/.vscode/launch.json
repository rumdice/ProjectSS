{
    "version": "0.2.0",
    "configurations": 
    [  
      {
        "name": "Debug Blazor WebAssembly WEB",
        "type": "blazorwasm",
        "request": "launch",
        "program": "${workspaceFolder}/bin/Debug/net8.0/BlazorApp.dll",  // 프로젝트 DLL 경로
        "args": [],
        "cwd": "${workspaceFolder}",
        "stopAtEntry": false,
        "env": {
          "ASPNETCORE_ENVIRONMENT": "Development"
        },
        "serverReadyAction": {
          "action": "openExternally",
          "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
          "uriFormat": "%s"
        }
      }
    ]
  }