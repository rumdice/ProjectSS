@page "/gallery"
@using Radzen.Blazor
@using LogApp.Service
@inject ImageService ImageService

<PageTitle>Photo Gallery</PageTitle>

<h1>Photo Gallery</h1>

<button @onclick="RefreshImages">Refresh Images</button>

<div class="image-gallery">
    @foreach (var imageUrl in ImageService.ImageUrls)
    {
        <div class="image-item">
            <img src="@imageUrl" alt="Image" class="image" />
        </div>
    }
</div>

@code {
    private async Task RefreshImages()
    {
        await ImageService.LoadImages();
        StateHasChanged();
    }

    protected override async Task OnInitializedAsync()
    {
        await ImageService.LoadImages();
    }
}