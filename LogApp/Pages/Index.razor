@page "/"

@using LogApp.Service
@inject ImageService ImageService
@inject AccountService AccountService

<PageTitle>Photo Gallery</PageTitle>

<h1>Photo Gallery</h1>

<RadzenStack AlignItems="AlignItems.Center" class="rz-mx-auto rz-my-12">
    <RadzenImage Path="https://rumdice-projectss.s3.ap-northeast-2.amazonaws.com/images/bike.jpeg" Style="width: 15rem;"
        AlternateText="bike" />
</RadzenStack>

@code {
    [Inject]
    private NavigationManager Navigation { get; set; }

    protected override async Task OnInitializedAsync()
    {
        // 인증 상태 확인
        bool isAuthenticated = AccountService.GetState<bool>("IsAuthenticated");
        if (!isAuthenticated)
        {
            Navigation.NavigateTo("/login");
        }
    }
}

